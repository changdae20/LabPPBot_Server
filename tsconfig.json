{
  "compilerOptions": {
    "target": "es2018",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "allowJs": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
	"resolveJsonModule": true,
	"esModuleInterop": true
  },
  "exclude": ["node_modules", "dist", "config", "apidoc"]
}
